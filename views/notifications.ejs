<link rel="stylesheet" href="/css/notifications.css">

<div class="notifications-container-v2">
    <h1>Notifications</h1>
    <ul class="notifications-list-v2">
        <% if (notifications && notifications.length > 0) { %>
            <% notifications.forEach(notif => { %>
                <li class="notification-item-v2 <%= !notif.read ? 'unread' : '' %>">
                    <a href="<%= notif.link || '#' %>">
                        <div class="notification-content-v2">
                            <span class="notification-icon-v2">
                                <% if (notif.type === 'new_match') { %>
                                    <i class="fas fa-heart" style="color: #e94057;"></i>
                                <% } else if (notif.type === 'admin_broadcast') { %>
                                    <i class="fas fa-bullhorn" style="color: #007bff;"></i>
                                <% } else { %>
                                    <i class="fas fa-comment-dots" style="color: #28a745;"></i>
                                <% } %>
                            </span>
                            <p class="notification-message-v2"><%= notif.message %></p>
                        </div>
                        <span class="notification-timestamp-v2"><%= new Date(notif.createdAt).toLocaleString() %></span>
                    </a>
                </li>
            <% }) %>
        <% } else { %>
            <div class="no-notifications-v2">
                <p>You have no new notifications.</p>
            </div>
        <% } %>
    </ul>
</div>